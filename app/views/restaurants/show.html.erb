<h1 class="text-center py-5"><%= @restaurant.name %></h1>
<h4 class="text-center">A delicious <%= @restaurant.category %> restaurant</h4>
<h3 class="text-center">Find us at: <%= @restaurant.address %></h3>
<h3 class="text-center">Call us: <%= @restaurant.phone_number %></h3>
<br>
<hr>
<br>
<h3>Reviews:</h3>
<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<ul class="list-group">
  <div class="container-fluid">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <% if review.rating == 5%>
      <%= "⭐️⭐️⭐️⭐️⭐️" %>
    <% elsif review.rating == 4%>
      <%= "⭐️⭐️⭐️⭐️" %>
    <% elsif review.rating == 3%>
      <%= "⭐️⭐️⭐️" %>
    <% elsif review.rating == 2%>
      <%= "⭐️⭐️" %>
    <% else %>
      <%= "⭐️" %>
    <% end %><br>
    <%= review.content %>
    </li>
  <% end %>
</div>
</ul>
